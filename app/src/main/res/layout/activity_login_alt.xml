<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background"
    tools:ignore="HardcodedText">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        app:cardCornerRadius="16dp"
        app:strokeColor="@color/white_transparent"
        app:strokeWidth="0.5dp">
        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/app_icon"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập để tiếp tục"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/font_size_large"
        android:gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:layout_margin="25dp"
        android:background="@drawable/custom_corners"
        android:orientation="vertical"
        tools:ignore="ContentDescription">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng đăng nhập để sử dụng hết tiện ích của App truyện"
            android:gravity="center"
            android:textColor="@color/gray_text"
            android:textSize="18sp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:columnCount="2"
            android:rowCount="2"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:text="Lưu truyện yêu thích"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_medium"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_bookmark" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center_vertical"
                android:text="Lịch sử đọc truyện"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_medium"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_time_past" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Thông báo cập nhật"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_medium"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_notification_orange" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Bình luận truyện"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/font_size_medium"
                android:drawablePadding="10dp"
                app:drawableStartCompat="@drawable/ic_comment" />
        </GridLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnLoginAlt"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:text="Đăng nhập ngay"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/white"
        android:padding="15dp"/>
</LinearLayout>