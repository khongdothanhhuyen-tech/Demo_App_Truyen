<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:ignore="HardcodedText">
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.StoryDetailActivity"
        android:orientation="vertical"
        android:background="@color/gray_background"
        tools:ignore="ContentDescription">
        <ImageView
            android:id="@+id/img_storyPicture"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/demonslayer"/>
        <TextView
            android:id="@+id/tv_tenTruyen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh gươm diệt quỷ"
            android:textSize="@dimen/font_size_large"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>
        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0DFFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thể loại"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/tv_theLoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hành động"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            android:textColor="@color/gray_text"
            android:layout_marginStart="20dp"/>
        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0DFFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác giả"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/tv_tacGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Tác giả: Cá sấu"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold" />

        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0DFFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/tv_moTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả: Quỷ quá mạnh out trình thợ săn"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            android:textColor="@color/gray_text"
            android:layout_marginStart="20dp"/>
        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#0DFFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách chương"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="20dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dsChuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>